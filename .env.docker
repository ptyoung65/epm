# AIRIS EPM Docker 환경 변수 설정 파일
# Docker Compose에서 사용되는 환경변수들

# 기본 환경 설정
NODE_ENV=production
LOG_LEVEL=info

# 서비스 포트 설정
SESSION_REPLAY_PORT=3004
SESSION_REPLAY_ADMIN_PORT=3024
OPENREPLAY_FRONTEND_PORT=3030
OPENREPLAY_CHALICE_PORT=3031

# 데이터베이스 설정 (내부 Docker 네트워크 주소)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/airis_apm
REDIS_URL=redis://redis:6379
MONGODB_URL=mongodb://mongodb:27017/airis-apm
CLICKHOUSE_URL=http://clickhouse:8123

# OpenReplay 설정
OPENREPLAY_PROJECT_KEY=airis-epm
OPENREPLAY_PROJECT_ID=1

# MinIO (S3 호환) 설정
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
OPENREPLAY_S3_BUCKET_NAME=openreplay
OPENREPLAY_S3_ENDPOINT_URL=http://minio:9000

# 보안 설정 (프로덕션에서는 변경 필요)
SESSION_SECRET=airis-epm-session-secret-change-in-production
JWT_SECRET=airis-epm-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h

# CORS 설정 (콤마로 구분)
CORS_ORIGIN=http://localhost:3002,http://localhost:3024,http://localhost:3030,http://localhost:3031

# 파일 업로드 설정
MAX_PAYLOAD_SIZE=100mb

# 세션 리플레이 설정
SESSION_REPLAY_RETENTION_DAYS=30
SESSION_REPLAY_MAX_DURATION=7200
SESSION_REPLAY_SAMPLING_RATE=1.0

# 성능 설정
MAX_CONCURRENT_SESSIONS=1000
SESSION_CLEANUP_INTERVAL=3600
METRICS_RETENTION_DAYS=90

# OpenReplay Frontend 설정
OPENREPLAY_FRONTEND_BACKEND_HOST=openreplay-chalice:8080

# PostgreSQL 추가 설정
POSTGRES_DB=airis_apm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ClickHouse 추가 설정
CLICKHOUSE_DB=airis_apm
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=