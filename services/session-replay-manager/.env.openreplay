# OpenReplay 환경 변수 설정
POSTGRES_PASSWORD=openreplay_secure_password_2024
CLICKHOUSE_PASSWORD=clickhouse_secure_password_2024

# MinIO S3 Storage
MINIO_ACCESS_KEY=openreplay_minio_user
MINIO_SECRET_KEY=openreplay_minio_password_2024_secure

# OpenReplay 설정
ASSIST_KEY=your_assist_key_here
CAPTCHA_SITE_KEY=your_captcha_site_key_here

# ICE Servers (WebRTC)
ICE_SERVERS=[{"urls":"stun:stun.l.google.com:19302"}]

# 이메일 알림 설정
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Slack 알림
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Domain 설정 (프로덕션 배포시)
DOMAIN_NAME=localhost
OPENREPLAY_URL=http://localhost:3030

# SSL 설정 (프로덕션용)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key

# 관리자 계정 설정
ADMIN_EMAIL=admin@airis-epm.com
ADMIN_PASSWORD=admin_secure_password_2024

# JWT 토큰
JWT_SECRET=openreplay_jwt_secret_key_very_secure_2024
JWT_EXPIRATION=24h

# 세션 보안
SESSION_SECRET=openreplay_session_secret_very_secure_2024

# 로그 레벨
LOG_LEVEL=info

# 데이터 보존 기간 (일)
DATA_RETENTION_DAYS=30
SESSION_RETENTION_DAYS=90

# 성능 설정
MAX_SESSION_DURATION=7200  # 2시간 (초)
MAX_FILE_SIZE=100MB
MAX_SESSIONS_PER_PROJECT=10000

# 보안 설정
CORS_ORIGIN=http://localhost:3030,http://localhost:4000
SECURE_COOKIES=false
SAME_SITE=lax

# 모니터링
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# 개발/디버그 설정
DEBUG_MODE=false
VERBOSE_LOGGING=false