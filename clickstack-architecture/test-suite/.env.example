# AIRIS-MON Test Suite Environment Configuration
# LLM Integration Settings

# ========== Ollama Settings (Primary Local LLM) ==========
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=gemma2:3b
OLLAMA_TIMEOUT=30000
OLLAMA_MAX_RETRIES=3

# ========== External LLM API Keys ==========
# Google Gemini (Cloud Fallback)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (Premium Option)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (Alternative Option)
CLAUDE_API_KEY=your_claude_api_key_here

# ========== LLM Router Settings ==========
# Default primary provider (ollama, gemini, openai, claude)
DEFAULT_LLM_PROVIDER=ollama
# Prefer local models over cloud when available
PREFER_LOCAL_LLM=true
# Maximum cost per token for automatic provider selection
MAX_COST_PER_TOKEN=0.01
# Auto-fallback on provider failure
AUTO_FALLBACK_ENABLED=true

# ========== Korean Language Settings ==========
# Default formality level (formal, casual)
DEFAULT_FORMALITY=formal
# Enable Korean language preprocessing
KOREAN_PREPROCESSING=true
# Enable Korean language quality validation
KOREAN_QUALITY_CHECK=true
# Minimum Korean quality score (0.0-1.0)
MIN_KOREAN_QUALITY=0.7

# ========== Application Settings ==========
# Test suite server port
TEST_PORT=3100
# Environment mode
NODE_ENV=development

# ========== Database Settings ==========
# ClickHouse connection
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=airis_mon

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/airis_mon

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379

# ========== Monitoring Settings ==========
# Enable performance monitoring
PERFORMANCE_MONITORING=true
# Enable request logging
REQUEST_LOGGING=true
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ========== Security Settings ==========
# Enable CORS
CORS_ENABLED=true
# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3100

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ========== Session Recording Settings ==========
# Enable session recording
SESSION_RECORDING=true
# Session storage path
SESSION_STORAGE_PATH=./data/sessions

# ========== AI/ML Pipeline Settings ==========
# Enable AI/ML features
AIML_ENABLED=true
# Model training interval (minutes)
MODEL_TRAINING_INTERVAL=60
# Enable automatic model retraining
AUTO_RETRAIN=true

# ========== Alerting Settings ==========
# Enable email alerts
EMAIL_ALERTS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Enable Slack alerts
SLACK_ALERTS=false
SLACK_WEBHOOK_URL=your_slack_webhook_url

# ========== Development Settings ==========
# Enable debug mode
DEBUG_MODE=false
# Enable hot reload
HOT_RELOAD=true
# Enable verbose logging
VERBOSE_LOGGING=false